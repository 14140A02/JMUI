/**
 * 圆角头像，列表场景，默认用100px的
 */
avatar($size = 50px) {
    width: $size;
    height: $size;
    overflow: hidden;
    -webkit-border-radius: 200px;
    display: block;
    -webkit-background-size: 100% 100%;
}

.ui-avatar {
    avatar;
    background-image:url(../img/default.png?_bid=306);
    span {
        avatar;
    }
}

.ui-avatar-lg {
    avatar(54px);
    background-image:url(../img/default.png?_bid=306);
    span {
        avatar(54px);
    }
}

.ui-avatar-s {
    avatar(40px);
    background-image:url(../img/default.png?_bid=306);
    span {
        avatar(40px);
    }
}

/* 资料场景 */
.ui-avatar-one {
