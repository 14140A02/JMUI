@import './base-color';

::-webkit-scrollbar {
  width: 0;
}

.demo-border-1px {
  border: 1px solid #eee;
}

.jmu-header {
  text-align: center;
  line-height: 48px;
  @extend .demo-border-1px;
}
.jmu-content-container {
  padding: 20px;
}

.demo-desc {
  display: none;
}



.demo-padding {
  padding: 5px;
}

.demo-margin {
  margin: 5px auto;
}

h2 {
  text-align: center;
  line-height: 48px;
  font-size: 16px;
}

.demo-desc {
  padding: 1em 20px;
  border-top: 1px solid #dedfe0;
}

.demo-desc + small {
  padding: 0 20px;
}

#nav li {
  list-style: none;

  margin-bottom: 10px;

  height: 40px;
  line-height: 40px;
  text-indent: 2em;
  font-size: 24px;
  @extend .demo-border-1px;

  &.divider {
    border: none;
  }
  a {
    display: block;
    width: 100%;
    height: 100%;

    @extend .jmu-color-blue;
  }

}


#base-color {
  .demo-block p {

    margin: 30px 0;
    padding: 10px 0;

    @extend  .demo-border-1px;

    text-align center;

    &.jmu-color-white {
      background: #eee;
    }
  }
}

#base-1px {
  .demo-block {
    text-align: center;
  }
  .demo-borders li {
    height: 50px;
    line-height: 50px;
    text-align: center;
    margin: 10px;
  }
}

#base-clearfix {
  .ui-clear-fix {
    @extend  .demo-border-1px;
    height: 40px;
    line-height: 40px;
    padding: 10px 0;
    div {
      outline: 1px solid orange;
    }
  }
}

#base-center {
  .ui-center {
    @extend  .demo-border-1px;
  }
}

#base-nowrap {
  .demo-block p {
    @extend  .demo-border-1px;
    @extend  .demo-padding;
    @extend  .demo-margin;
  }
}

#corner-tag .ui-corner-tag {
  display: inline-block;
}

#tab .tab-content li {
  text-align: center;
  margin-top: 20px;
}

#table .ui-table {
  text-align: center;
  line-height: 40px;
}

#notice .ui-notice {
  position: relative;
}

#dot .demo-block > div {
  position: relative;
  @extend  .demo-border-1px;
  @extend  .demo-padding;
  @extend  .demo-margin;
  height: 40px;
  line-height: 40px;
}

#grid .ui-col {
  outline: 1px solid #eee;
  height: 50px;
  line-height: 50px;
  text-align: center;
}

.demo-return-btn {
  position: absolute;
  top: 10px;
  left: 10px;
}

#debug .demo-block {
  font-size: 0;
}

#debug .demo-block img {
  margin-top: 4px;
}

#corner-tag .jmu-corner-tag {
  display: inline-block;
}