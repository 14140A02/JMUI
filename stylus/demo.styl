@import './base-color';
@import './base-1px';
@import './base-center';

::-webkit-scrollbar {
  width: 0;
}

.demo-border-1px {
  border: 1px solid #eee;
}

.jmu-header {
  text-align: center;
  line-height: 48px;
  @extend .demo-border-1px;
}
.jmu-content-container {
  padding: 20px;
}

.demo-desc {
  display: none;
}



.demo-padding {
  padding: 10px;
}

.demo-margin {
  margin: 10px auto;
}

h2 {
  text-align: center;
  line-height: 48px;
  font-size: 16px;
}

.demo-desc {
  padding: 1em 20px;
  border-top: 1px solid #dedfe0;
}

.demo-desc + small {
  padding: 0 20px;
}

.demo-show {
  @extend .demo-margin;
}

#demo-page {
  a {
    display: block;
    width: 80%;

    font-size: 24px;
    line-height: 24px;

    color: #00a5e0;

    @extend .demo-padding;
  }

    .tab-content > li {
      display: none;
    }

  .jmu-tab .item {
    border-top: 3px solid transparent;
    &.jmu-active {
      border-color: #00a5e0;
    }
  }

    .jmu-list {
      /*@extend .demo-border-1px;*/
      /*@extend .demo-padding;*/
    }
  .jmu-list-item-link {
    @extend .demo-border-1px;
    @extend .demo-margin;
  }
}


#base-color {
  .demo-block p {

    margin: 30px 0;
    padding: 10px 0;

    @extend  .demo-border-1px;

    text-align center;

    &.jmu-color-white {
      background: #eee;
    }
  }
}

#base-1px {
  .demo-block {
    text-align: center;
  }
  .demo-borders li {
    height: 50px;
    line-height: 50px;
    text-align: center;
    margin: 10px;
    @extend .demo-padding;
  }
}

#base-clearfix {
  .jmu-clear-fix {
    @extend  .demo-border-1px;
    /*height: 60px;*/
    div {
      @extend  .demo-border-1px;
      @extend .demo-padding;
      @extend .demo-margin;
    }
  }
}

#base-center {
  .jmu-horizental-center {
    @extend  .demo-border-1px;
    height: 100px;
    p {
      @extend  .demo-border-1px;
      @extend  .demo-padding;
    }
  }
}

#base-nowrap {
  .demo-block p {
    @extend  .demo-border-1px;
    @extend  .demo-margin;
    @extend .demo-padding;
    line-height: 2;
  }
}

#button {
  .jmu-btn {
    @extend .demo-margin;
  }
  .jmu-btn-lg {
    @extend .demo-margin;
  }
}

#corner-tag .jmu-corner-tag {
  display: inline-block;
}

#tab {
  .demo-item {
    @extend .demo-border-1px;
    @extend .demo-padding;
  }
  .tab-content li {
    text-align: center;
    margin-top: 20px;
  }
}

  #table {
    .demo-item {
      @extend .demo-margin;
    }
    .jmu-table {
      text-align: center;
      line-height: 40px;
    }
  }

#notice .jmu-notice {
  position: relative;
}

#dot .demo-block > div {
  position: relative;
  @extend  .demo-border-1px;
  @extend  .demo-padding;
  margin: 30px auto;
  text-align: center;
  height: 40px;
  line-height: 40px;
  background: #eee;
}

#grid .jmu-col {
  outline: 1px solid #eee;
  height: 50px;
  line-height: 50px;
  text-align: center;
}


#form {
  .jmu-form {
    @extend  .demo-border-1px;
    @extend  .demo-padding;
    @extend  .demo-margin;
  }
}
#list {
  .demo-item {
    @extend .demo-border-1px;
    @extend .demo-margin;
  }
}

#loading {
  .demo-show {
    @extend .demo-margin;
  }
}
#progress {
  .demo-item {
    @extend .demo-margin;
    @extend .demo-border-1px;
  }
  .jmu-progress-img,
  .jmu-progress-circle {
    @extend .demo-margin;
  }
}

#range {
  .demo-item {
    @extend .demo-margin;
    @extend .demo-border-1px;
  }
}

.demo-return-btn {
  position: absolute;
  top: 10px;
  left: 10px;
}

#debug .demo-block {
  font-size: 0;
}

#debug .demo-block img {
  margin-top: 4px;
}

#corner-tag .jmu-corner-tag {
  display: inline-block;
}