
::-webkit-scrollbar {
	width: 0;
}

h2 {
	text-align: center;
  	line-height: 48px;
	font-size: 16px;
}

.demo-desc {
	padding: 1em 20px;
	border-top: 1px solid #dedfe0;
}
.demo-desc + small {
	padding: 0 20px;
}
.demo-block {
	margin: 20px;
}


#base-1px {
  .demo-block {
	text-align: center;
  }
  .demo-borders li {
	height:50px;
	line-height:50px;
	text-align: center;
	margin:10px;
  }
}
#base-clearfix {
  .jmu-clear-fix {
	outline: 1px solid orange; height: 50px; line-height: 50px;
  }
}
#base-center {
  .jmu-center {
	outline: 1px solid orange;
  }
}

#corner-tag .jmu-corner-tag {
	display: inline-block;
}

#tab .tab-content li {
	text-align: center;
	margin-top: 20px;
}

#table .jmu-table {
	text-align: center;
	line-height: 40px;
}


#notice .jmu-notice {
	position: relative;
}

#dot .demo-block > div {
	position: relative;
	background: #eee;
	margin: 10px;
	height: 50px;
	line-height:50px;
}

#grid .jmu-col {
	outline: 1px solid #eee;
	height: 50px;
	line-height: 50px;
	text-align: center;
}

.demo-return-btn {
	position: absolute;
	top: 10px;
	left: 10px;
}

#debug .demo-block {
	font-size: 0;
}
#debug .demo-block  img{
	margin-top: 4px;
}