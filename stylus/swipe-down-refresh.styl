.jmu-swipe-tips {
    position: absolute;
    display: -webkit-box;
    -webkit-box-pack: center;
    -webkit-box-align: center;
    width: 100%;
    font-size: 14px;
    height: 50px;
}
.jmu-swipe-tips[data-state]:before {
    content: '';
    width: 16px;
    height: 16px;
    display: inline-block;
    vertical-align: middle;
    margin-right: 4px;
}
.jmu-swipe-tips[data-state="-1"]:before {
    background: none
}
.jmu-swipe-tips[data-state="0"]:before {
    background: url(../img/arrow-down.png) center center/contain no-repeat;
}
.jmu-swipe-tips[data-state="1"]:before {
    background: url(../img/arrow-up.png) center center/contain no-repeat;
}
.jmu-swipe-tips[data-state="2"]:before {
    background: url(../img/spinner.png) center center/contain no-repeat;
}
.jmu-swipe-tips[data-state="3"]:before {
    background: url(../img/checkmark.png) center center/contain no-repeat;
}