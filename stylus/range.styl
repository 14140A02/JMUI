
.ui-form-item-range {
    width: 100%;
}  

.ui-range {
    position: relative;
    
    display: inline-block;
    
    .ui-range-val {
        position: absolute;
        top: 0;
        right: 0;
        
        width: 40px;
        
        text-align: center;
    }

    input[type=range] {
      width: 260px;
      padding: 0 40px;
      
      -webkit-appearance: none;
    }
    input[type=range]:focus {
      outline: none;
    }
    input[type=range]::-webkit-slider-runnable-track {
      height: 6px;
      
      cursor: pointer;
      background: #0079ff;
      border-radius: 3px;
    }
    input[type=range]::-webkit-slider-thumb {
      height: 50px;
      width: 50px;
      border-radius: 25px;
      background: #fff;
      cursor: pointer;
      -webkit-appearance: none;
      margin-top: -25px;
      border: 1px solid #eee;
    }
    input[type=range]:focus::-webkit-slider-runnable-track {
      background: #0079ff;
    }
}