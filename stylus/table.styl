/**
 * 表格
 */
.jmu-table {
  width: 100%;
  border-collapse:collapse;
}
.jmu-table th {font-weight: 500;}
.jmu-table td,.jmu-table th{
    border-bottom: 1px solid #dedfe0;
    border-right: 1px solid #dedfe0;
}
@media screen and (-webkit-min-device-pixel-ratio: 2) {
	.jmu-table td,.jmu-table th {
		position: relative;
		border-right: 0;
        border-bottom: 0;
	}
    .jmu-table td:before,
    .jmu-table td:after,
    .jmu-table th:before,
    .jmu-table th:after {
        content: "";
        position: absolute;
        -webkit-transform-origin: right bottom;
    }
    .jmu-table td:before,.jmu-table th:before {
    	width: 0;
    	border-right: 1px solid #dedfe0;
    	right: 0;
    	top:0;
    	bottom: 0;
    	-webkit-transform: scaleX(.5);
    }
    .jmu-table td:after,.jmu-table th:after {
    	left: 0;
    	right: 0;
    	height: 0;
    	border-bottom: 1px solid #dedfe0;
    	bottom: 0;
    	-webkit-transform: scaleY(.5);
    }
    .jmu-table tr td:last-child:before,.jmu-table tr th:last-child:before{
        border-right: 0;
    }
    .jmu-table tr:last-child td:after {
        border-bottom: 0;
    }
    .jmu-table td.no-content:after {
        border-bottom: 0;
    }
}
.jmu-table tr td:last-child,.jmu-table tr th:last-child {
    border-right: 0;
}
.jmu-table tr:last-child td {
    border-bottom: 0;
}
.jmu-table td.no-content {
    border-bottom: 0;
}
